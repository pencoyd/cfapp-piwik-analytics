      },

      "assets":{
        "logos" : {
          "200px": "./public/images/logo-200.png",
          "132px": "./public/images/logo-132.png"
        },
        "detail_page" : [
          "./public/images/piwik_analytics_screenshot.png"
          ],
        "images" : [
          "./public/images/piwik_analytics.png"
          ]
      },
      /*
       * Lot of things to implement in the interface
       * just the basics for now.
       *
       * http://piwik.org/docs/javascript-tracking/
       *
       * */
      "interface": [

      {
        "id": "use_cdnjs",
        "type": "select",
        "name": "Do you want to use cdnjs to serve 'piwik.js' to your visitors?",
        "description": "Choose whether to enable cdnjs.",
        "options": [
        {
          "label": "Yes!",
          "value": "true"
        },
        {
          "label": "No, I am scared.",
          "value": ""
        }
        ]
      },

      {
        "id": "piwik_js_default",
        "name": "default piwik.js location ",
        "description": "A piwik.js URL 'http://' or 'https://'. Leaving this empty will default to use piwik.js from cdnjs.com ",
        "type": "string",
        "value": "https://cdnjs.cloudflare.com/ajax/libs/piwik/1.10.1/piwik.js"
      },

      {
        "id": "piwik_tracker",
        "name": "Receiver URL (REQUIRED)",
        "description": "A receiver URL 'https://'. Should be using SSL for security purposes but using '//host.tld' is valid also. ",
        "type": "string",
        "value": "https://path.to.tracker.url/"

      },

      {
        "id": "site_id",
        "name": "SiteID ",
        "description": "Site ID to be tracked, otherwise it will default to use '1'.",
        "type": "string"
      },

      {
        "id": "link_tracking",
        "name": "Link Tracking",
        "description": "equivalent to \"_paq.push(['enableLinkTracking',true]);\"",
        "type": "select",
        "options" : [
        {
          "label":"Link Tracking Enabled",
          "value": "true"
        },
        {
          "label":"Disable Link Tracking",
          "value":""
        }
        ]
      },

      {
        "id":"set_obey_do_not_track",
        "name": "Whether or not to obey the browser do not track.",
        "description": "browser do not track enable/disable. equivalent to \"_paq.push(['setDoNotTrack',true]);\"",
        "type":"select",
        "options": [ 
        {
          "label": "Yes, obey the browser!",
          "value": ""
        },
        {
          "label":"No, track ALL THE VISITORS.",
          "value": "true"
        }
        ]
      },



      ]
    }
}
